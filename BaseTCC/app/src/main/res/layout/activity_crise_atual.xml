<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".criseAtual"
    android:background="#F4FBFF">

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/barraMenu"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageMenu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:onClick="voltar"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:tint="@color/white"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="290dp"
            android:src="@drawable/logo" />

    </LinearLayout>

    <LinearLayout
        style="@style/estiloCrise"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:layout_centerHorizontal="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:text="Nome:   Nome informado"
                android:textColor="#2E6982"/>
            <TextView
                android:id="@+id/datinhaa"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Data:     Data do relatório"
                android:textColor="#2E6982"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        style="@style/estiloCrise"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="200dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Inicio:"
                android:textColor="#2E6982"
                android:textSize="20dp" />
        
            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/horaComeco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="horaComeco"
                android:textColorHint="#2E6982"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"/>

            <TextView
                android:id="@+id/datinha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="dataComeco"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#2E6982"
                android:layout_marginTop="85dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:text="Final:"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:id="@+id/horatermino"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="horatermino"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#2E6982"
                android:layout_marginTop="175dp"/>

            <TextView
                android:id="@+id/dataTermino"
                android:gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="dataTermino"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#2E6982"
                android:layout_marginTop="200dp"/>

        </FrameLayout>
    </RelativeLayout>

    <LinearLayout
        style="@style/estiloCrise"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="200dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Intensidade:"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:id="@+id/intensidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:hint="OOOOO"
                android:textSize="20dp"
                android:textColorHint="#2E6982"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/estiloCrise"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="315dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Onde você"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:text="estava:"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:id="@+id/onde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:textColorHint="#2E6982"
                android:hint="DESCRIÇÃO"
                android:textSize="20dp"
                android:layout_marginTop="120dp"/>

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/estiloCrise"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginStart="207dp"
        android:layout_marginTop="580dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Algum remédio"
                android:textSize="18sp"
                android:textColor="#2E6982"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="foi ingerido ?"
                android:textSize="18sp"
                android:textColor="#2E6982"/>

            <TextView
                android:id="@+id/remedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:hint="OOO"
                android:textColorHint="#2E6982"
                android:textSize="20dp"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        style="@style/estiloCrise"
        android:layout_width="150dp"
        android:layout_height="221dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="460dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Gatilho:"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:id="@+id/gatilho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="DESCRIÇÃO"
                android:textColorHint="#2E6982"
                android:textSize="18dp"
                android:layout_marginTop="60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:text="Sentimento:"
                android:textSize="20dp"
                android:textColor="#2E6982"/>

            <TextView
                android:textColorHint="#2E6982"
                android:id="@+id/sentimentoo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="DESCRIÇÃO"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:textSize="19dp"
                android:layout_marginTop="160dp"/>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="280dp"
        android:layout_marginTop="670dp"
        android:onClick="btnPDF">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/emocoesbg" />

    </FrameLayout>

</RelativeLayout>
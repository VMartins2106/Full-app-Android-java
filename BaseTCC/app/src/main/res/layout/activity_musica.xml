        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="235dp"
        android:src="@drawable/ic_play" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="235dp"
        android:text="Sons calmos"
        android:textColor="#2E6982"
        android:textSize="24sp" />

    <View
        android:background="@drawable/viewsom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="290dp"/>

    <ImageView
        android:id="@+id/somEstudar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="295dp"
        android:src="@drawable/ic_play"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="295dp"
        android:text="Sons para estudar"
        android:textColor="#2E6982"
        android:textSize="24sp" />

    <View
        android:background="@drawable/viewsom"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="350dp"/>

    <ImageView
        android:id="@+id/somDormir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="355dp"
        android:src="@drawable/ic_play"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="355dp"
        android:text="Sons para dormir"
        android:textColor="#2E6982"
        android:textSize="24sp" />

    <Button
        android:backgroundTint="#3F8BAB"
        android:layout_width="320dp"

<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_entrar"
    tools:context=".TelaLogin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:onClick="btnVoltar"
            android:src="@drawable/ic_voltar" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="50dp"
            android:text="@string/bem_vindo"
            android:textColor="@color/white"
            android:textSize="45sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginTop="330dp">

            <Button
                android:id="@+id/btnEntrar"
                style="@style/buttonEntrar"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/senha_relative"
                android:layout_marginStart="24dp"
                android:layout_marginTop="30dp"
                android:onClick="entrar"
                android:text="@string/btnEntrar"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <RelativeLayout
                style="@style/cadastro"
                android:id="@+id/email_relative"
                android:layout_width="340dp"
                android:layout_height="43dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="80dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/ic_email"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/cadastro"
                android:id="@+id/senha_relative"
                android:layout_width="340dp"
                android:layout_height="43dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="150dp">

                <EditText
                    android:id="@+id/senha"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:backgroundTint="@color/white"
                    android:drawableRight="@drawable/ic_eye"
                    android:hint="@string/senha"
                    android:inputType="numberPassword"
                    android:textAlignment="textStart"
                    android:textSize="18sp" />

            </RelativeLayout>

            <View
                android:layout_width="145dp"
                android:layout_height="2dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="310dp"
                android:background="@color/gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="185dp"
                android:layout_marginTop="300dp"
                android:text="ou"
                android:textColor="@color/gray" />

            <View
                android:layout_width="145dp"
                android:layout_height="2dp"
                android:layout_marginStart="215dp"
                android:layout_marginTop="310dp"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/google_btn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="340dp"
                android:src="@drawable/google" />

        </RelativeLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>